{
  "enabled": {
    "type": "bool",
    "description": "启用 Minecraft 适配器",
    "default": false
  },
  "websocket_host": {
    "type": "string",
    "description": "WebSocket 服务器地址",
    "default": "localhost"
  },
  "websocket_port": {
    "type": "int",
    "description": "WebSocket 服务器端口",
    "default": 8765
  },
  "websocket_token": {
    "type": "string",
    "description": "WebSocket 认证 Token",
    "hint": "从 Minecraft 服务器插件配置中获取",
    "default": ""
  },
  "rest_api_host": {
    "type": "string",
    "description": "REST API 服务器地址",
    "default": "localhost"
  },
  "rest_api_port": {
    "type": "int",
    "description": "REST API 服务器端口",
    "default": 8766
  },
  "rest_api_token": {
    "type": "string",
    "description": "REST API 认证 Token",
    "hint": "从 Minecraft 服务器插件配置中获取",
    "default": ""
  },
  "auto_reconnect": {
    "type": "bool",
    "description": "自动重连",
    "hint": "连接断开后自动尝试重新连接",
    "default": true
  },
  "reconnect_interval": {
    "type": "int",
    "description": "重连间隔(秒)",
    "default": 15
  },
  "forward_chat_to_astrbot": {
    "type": "bool",
    "description": "转发聊天消息到 AstrBot",
    "hint": "将 Minecraft 玩家聊天消息转发到 AstrBot",
    "default": true
  },
  "forward_join_leave_to_astrbot": {
    "type": "bool",
    "description": "转发玩家进出消息",
    "hint": "将玩家加入/离开消息转发到 AstrBot",
    "default": true
  },
  "forward_target_session": {
    "type": "list",
    "description": "消息转发目标会话",
    "hint": "使用sid获取，例如 aiocqhttp:group:123456789。留空则不转发。",
    "default": []
  },
  "status_check_interval": {
    "type": "int",
    "description": "状态检查间隔(秒)",
    "hint": "定期检查服务器状态的时间间隔，设为 0 禁用",
    "default": 300
  },
  "auto_forward_prefix": {
    "type": "string",
    "description": "自动转发消息前缀",
    "hint": "用户消息以此前缀开头时自动转发到 Minecraft 服务器（例如: %）。留空则禁用此功能。",
    "default": "%"
  },
  "auto_forward_sessions": {
    "type": "list",
    "description": "自动转发监听的会话",
    "hint": "使用sid获取，例如 aiocqhttp:group:123456789。留空则监听所有会话。",
    "default": []
  }
}
